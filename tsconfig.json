{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "ESNEXT",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "isolatedModules": true,
    "strict": true,
    "importHelpers": true,
    "module": "esnext"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
